.container.mt-5
  .row.d-flex.justify-content-center.align-items-center.h-100
    .col-12.col-md-8.col-lg-6.col-xl-5
      .card.shadow-2-strong{style: "border-radius: 1rem;"}
        .card-body.p-5
          %h1.text-center.mb-3
            Log in
          %p.text-muted.text-center.mb-5
            Free access to our dashboard.

          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .form-outline.mb-4
              = f.label :email, "Email Address"
              = f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email"
            .form-outline.mb-4
              = f.label :password
              = f.password_field :password, class: "form-control", autocomplete: "current-password"
            - if devise_mapping.rememberable?
              .form-outline.mb-4
                = f.check_box :remember_me
                = f.label :remember_me
            = f.submit "Log in", class: "btn btn-lg w-100 btn-primary mb-3"
          .text-center
            %small.text-muted.text-center
              Already have an account?
              = render "devise/shared/links"
