            -# .form-outline.mb-4
            -#   = f.label :username
            -#   = f.text_field :username, class: "form-control", autofocus: true
            .form-outline.mb-4
              = f.label :email
              = f.email_field :email, class: "form-control", autofocus: false, autocomplete: "email"
            .form-outline.mb-4
              = f.label :password
              %i (leave blank if you don't want to change it)
              %br/
              = f.password_field :password, class: "form-control", autocomplete: "new-password"
              - if @minimum_password_length
                %em
                  = @minimum_password_length
                  characters minimum
            .form-outline.mb-4
              = f.label :password_confirmation
              = f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password"
            .form-outline.mb-4
              = f.label :current_password
              %i (we need your current password to confirm your changes)
              = f.password_field :current_password, class: "form-control", autocomplete: "current-password"

            = f.submit "Update", class: "btn btn-lg w-100 btn-primary mb-3"

          .text-center
            %small.text-muted.text-center
              Already have an account?
