.container.mt-5
  .row.d-flex.justify-content-center.align-items-center.h-100
    .col-12.col-md-8.col-lg-6.col-xl-5
      .card.shadow-2-strong{style: "border-radius: 1rem;"}
        .card-body.p-5
          %h1.text-center.mb-3
            Change your password
          %p.text-muted.text-center.mb-5
            Enter your new password below.

          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
            = render "devise/shared/error_messages", resource: resource
            = f.hidden_field :reset_password_token
            .form-outline.mb-4
              = f.label :password, "New password"
              %br/
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
                %br/
              = f.password_field :password, class: "form-control", autofocus: true, autocomplete: "new-password"
            .form-outline.mb-4
              = f.label :password_confirmation, "Confirm new password"
              %br/
              = f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password"

            = f.submit "Change My Password", class: "btn btn-lg w-100 btn-primary mb-3"

          .text-center
            %small.text-muted.text-center
              Already have an account?
              = render "devise/shared/links"
